                                    when 2
                                        .badge.text-bg-warning.ms-2 No
                                    when 3
                                        .badge.text-bg-primary.ms-2 Neutral
                                    when 4
                                        .badge.text-bg-info.ms-2 Yes
                                    when 5
                                        .badge.text-bg-success.ms-2 Strong Yes

