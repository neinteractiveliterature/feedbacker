                                    when 1
                                        .badge.text-bg-danger Strong No
                                    when 2
                                        .badge.text-bg-warning No
                                    when 3
                                        .badge.text-bg-primary Neutral
                                    when 4
                                        .badge.text-bg-info Yes
                                    when 5
